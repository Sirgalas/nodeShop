extends ../layouts/main
block title
    title StartPage
block content
    div(id="hot-deal" class="section")
        div(class="container")
            div(class="row")
                div(class="col-md-12")
                    div(class="hot-deal")
                        ul(class="hot-deal-countdown")
                            li
                                div
                                    h3 02
                                        span Days
                            li
                                div
                                    h3 10
                                        span Hours
                            li
                                div
                                    h3 34
                                        span Mins
                            li
                                div
                                    h3 60
                                        span Secs
                        h2(class="text-uppercase") hot deal this week
                        p New Collection Up to 50% OFF
                        a(class="primary-btn cta-btn" href="#") Shop now
    div(class="section")
        div(class="container")
            div(class="row")
            div(class="col-md-12")
                div(class="section-title")
                    h3(class="title") Top selling
                        div( class="section-nav")
                        ul(class="section-tab-nav tab-nav")
                            li(class="active")
                                a(data-toggle="tab" href="#tab2") Laptops
                            li
                                a(data-toggle="tab" href="#tab2") Smartphones
                            li
                                a(data-toggle="tab" href="#tab2") Cameras
                            a(data-toggle="tab" href="#tab2") Accessories
                div(class="col-md-12")
                    div(class="row")
                        div(class="products-tabs")
                            div(id="tab2" class="tab-pane fade in active")
                                div(class="products-slick" data-nav="#slick-nav-2")
                                    each val,index in goods
                                        div(class="product")
                                            div(class="product-img")
                                                img(src="#{val.image}" alt="")
                                            //div(class="product-label")
                                                span(class="sale") -30%
                                                span(class="new") NEW
                                            div(class="product-body")
                                                each category in val.categories
                                                    p(class="product-category") #{category.name}
                                                h3(class="product-name")
                                                    a(href="#") #{val.name}
                                                h4(class="product-price") #{val.cost}
                                                    del(class="product-old-price") #{val.cost}
                                                div(class="product-rating")
                                                    i(class="fa fa-star")
                                                    i(class="fa fa-star")
                                                    i(class="fa fa-star")
                                                    i(class="fa fa-star")
                                                    i(class="fa fa-star")
                                                div(class="product-btns")
                                                    button(class="add-to-wishlist")
                                                        i(class="fa fa-heart-o")
                                                        span(class="tooltipp") add to wishlist
                                                    button(class="add-to-compare")
                                                        i(class="fa fa-exchange")
                                                        span(class="tooltipp") add to compare
                                                    button(class="quick-view")
                                                        i(class="fa fa-eye")
                                                        span(class="tooltipp") quick view
                                            div(class="add-to-cart")
                                                button(class="add-to-cart-btn")
                                                    i(class="fa fa-shopping-cart") add to cart